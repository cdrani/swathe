{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm dev",
        "devPath": "http://localhost:5173",
        "distDir": "../build",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "swathe",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "dialog": {
                "save": true
            },
            "path": {
                "all": true
            },
            "fs": {
                "writeFile": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.swathe.app",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "minWidth": 800,
                "minHeight": 600,
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "swathe",
                "width": 800,
                "fileDropEnabled": false
            }
        ]
    }
}
